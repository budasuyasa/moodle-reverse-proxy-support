###############################################
# Moodle Custom Image (MOODLE_501_STABLE)
# Environment Example
###############################################

# ============================================
# Moodle Site Configuration
# ============================================

# Branch/version (no dot)
MOODLE_VERSION=MOODLE_501_STABLE

# Site name (optional, informational)
MOODLE_SITE_NAME="Moodle Learning Portal"

# Host/domain name (used in $CFG->wwwroot)
MOODLE_HOST=

# Default language
MOODLE_LANG=en

# Reverse proxy & HTTPS handling
MOODLE_REVERSEPROXY=true
MOODLE_SSLPROXY=true

# Default admin credentials (used during first installation)
MOODLE_USERNAME=admin
MOODLE_PASSWORD=admin123
MOODLE_EMAIL=admin@example.com

# ============================================
# Moodle Database Configuration
# ============================================

# Supported types: mysqli, pgsql
MOODLE_DATABASE_TYPE=mysqli

# Hostname or service name of DB container
MOODLE_DATABASE_HOST=mariadb

# Database port
MOODLE_DATABASE_PORT_NUMBER=3306

# Database name
MOODLE_DATABASE_NAME=moodle

# Database user credentials
MOODLE_DATABASE_USER=moodle
MOODLE_DATABASE_PASSWORD=supersecret

# ============================================
# SMTP Mail Configuration
# ============================================

# SMTP host, e.g., smtp.gmail.com
MOODLE_SMTP_HOST=smtp.gmail.com

# Port (25, 465, 587)
MOODLE_SMTP_PORT_NUMBER=587

# SMTP authentication
MOODLE_SMTP_USER=no-reply@example.com
MOODLE_SMTP_PASSWORD=your_smtp_password

# Protocol: tls, ssl, or leave empty
MOODLE_SMTP_PROTOCOL=tls

# ============================================
# PHP Runtime Configuration
# ============================================

# Max upload size
UPLOAD_MAX_SIZE=128M

# Max POST size
POST_MAX_SIZE=128M

# PHP memory limit
PHP_MEMORY_LIMIT=512M

# For large Moodle forms (e.g. gradebook, quizzes)
PHP_MAX_INPUT_VARS=5000

# ============================================
# Moodle Data Directory
# ============================================

# Path inside container (persistent volume recommended)
MOODLE_DATA=/var/www/moodledata

###############################################
# Optional for advanced deployments
###############################################

# Enable/disable debugging
# MOODLE_DEBUG=true

# Cron interval (handled by supervisor, usually every minute)
# No need to modify unless you want custom timing.
###############################################

